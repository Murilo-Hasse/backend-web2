<h2>Meu Perfil</h2>
<a href="/recruiter/dashboard"> <button> Voltar ao Dashboard</button> </a>
<br><br>
<form action="/recruiter/profile/update" method="post">
    Nome Completo: <input type="text" name="nome" value="{{recruiter.nome}}" required>
    <br> <br>
    Email: <input type="email" name="email" value="{{recruiter.email}}" required>
    <br> <br>
    Telefone: <input type="text" name="telefone" value="{{recruiter.telefone}}">
    <br> <br>
    Empresa: <span>{{recruiter.company.nome}}</span>
    <br> <br>
    <input type="submit" value="Atualizar Perfil">
</form>
<br>
<h3>Alterar Senha</h3>
<form action="/recruiter/password/change" method="post">
    Senha Atual: <input type="password" name="senhaAtual" required>
    <br> <br>
    Nova Senha: <input type="password" name="novaSenha" required minlength="6">
    <br> <br>
    Confirmar Nova Senha: <input type="password" name="confirmarNovaSenha" required minlength="6">
    <br> <br>
    <input type="submit" value="Alterar Senha">
</form>

