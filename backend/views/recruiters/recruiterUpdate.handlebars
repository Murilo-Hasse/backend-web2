<form action="/recruiterUpdate/{{recruiter.id}}" method="post">
    Nome: <input type="text" name="nome" value="{{recruiter.nome}}" required>
    <br> <br>
    Email: <input type="email" name="email" value="{{recruiter.email}}" required>
    <br> <br>
    Telefone: <input type="text" name="telefone" value="{{recruiter.telefone}}">
    <br> <br>
    Empresa:
    <select name="companyId" required>
        {{#each companies}}
        <option value="{{id}}" {{#if (eq id ../recruiter.companyId)}}selected{{/if}}>{{nome}}</option>
        {{/each}}
    </select>
    <br> <br>
    <input type="submit" value="Atualizar">
</form>